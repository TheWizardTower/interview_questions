{
    "files": [
        "src/demo.ts"
    ],
    "compilerOptions": {
        "outDir": "./lib",
        "target": "es2016",
        "module": "commonjs",
        "lib": [
            "es6",
            "dom"
        ],
        "declaration": true,
        "strict": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true
    }
}
